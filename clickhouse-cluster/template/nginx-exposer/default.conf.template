user nginx;
worker_processes ${ASM_NGINX_EXPOSER_WORKER_PROCESSES};
error_log /dev/stdout ${ASM_NGINX_EXPOSER_LOG_LEVEL};
pid /var/run/nginx.pid;

events {
  worker_connections ${ASM_NGINX_EXPOSER_WORKER_CONNECTIONS};
  use epoll;
  multi_accept on;
}

stream {
  # HTTPS Port
  server {
    listen 8443;
    include /acl.conf;
    deny all;
    proxy_pass analytics-clickhouse:8443;
  }

  # TCP Port Secure
  server {
    listen 9440;
    include /acl.conf;
    deny all;
    proxy_pass analytics-clickhouse:9440;
  }

  # Interserver HTTPS Port
  server {
    listen 9010;
    include /acl.conf;
    deny all;
    proxy_pass analytics-clickhouse:9010;
  }

  # Raft Secure Port
  server {
    listen 9234;
    include /acl.conf;
    deny all;
    proxy_pass analytics-clickhouse:9234;
  }

  # Raft Secure Port
  server {
    listen 9234 udp;
    include /acl.conf;
    deny all;
    proxy_pass analytics-clickhouse:9234;
  }

  # Keeper Server TCP Secure Port
  server {
    listen 9281;
    include /acl.conf;
    deny all;
    proxy_pass analytics-clickhouse:9281;
  }
}
